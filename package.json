{
  "name": "lifevault",
  "version": "1.0.0",
  "description": "A powerful productivity app combining Notion, Obsidian, and Ember.ly features",
  "main": "public/electron.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "react-dev": "vite",
    "electron-dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "electron-pack": "electron-builder",
    "preview": "vite preview"
  },
  "keywords": [
    "productivity",
    "notes",
    "mindmap",
    "para method"
  ],
  "author": "Alyssa",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.1",
    "reactflow": "^11.10.1",
    "sqlite3": "^5.1.6",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lifevault.app",
    "productName": "LifeVault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "public/icons/icon.icns",
      "category": "public.app-category.productivity"
    }
  }
}
